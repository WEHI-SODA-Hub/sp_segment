nextflow_process {

    name "Test Process SOPA_RESOLVECELLPOSE"
    script "../main.nf"
    process "SOPA_RESOLVECELLPOSE"

    tag "modules"
    tag "modules_local"
    tag "sopa_resolvecellpose"

    // Just a stub as this module has complex input requirements
    // will be tested in subworkflow instead

    test("sopa_resolvecellpose - stub") {

        options "-stub"

        when {
            process {
                """
                zarrDir = file("test.zarr", type: 'dir')
                zarrDir.mkdir()

                parquet = file("test.zarr/0.parquet")
                parquet.text = ""

                input[0] = [
                    [ id:'test' ], // meta map
                    zarrDir,
                    parquet
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
