nextflow_process {

    name "Test Process SOPA_CONVERT"
    script "../main.nf"
    process "SOPA_CONVERT"

    tag "modules"
    tag "modules_local"
    tag "sopa_convert"

    test("sopa_convert - tiff") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file('${projectDir}/tests/data/comet/synthetic_multichannel.tif')
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sopa_convert - tiff - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file('${projectDir}/tests/data/comet/synthetic_multichannel.tif')
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
