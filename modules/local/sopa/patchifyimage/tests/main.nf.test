nextflow_process {

    name "Test Process SOPA_PATCHIFYIMAGE"
    script "../main.nf"
    process "SOPA_PATCHIFYIMAGE"

    tag "modules"
    tag "modules_local"
    tag "sopa_patchifyimage"

    test("sopa_patchifyimage - zarr") {

        setup {
            run("SOPA_CONVERT") {
                script "../../convert/main.nf"
                process {
                    """
                    input[0] = [
                        [ id:'test' ], // meta map
                        file('${projectDir}/tests/data/comet/synthetic_multichannel.tif')
                    ]
                    """
                }
            }
        }

        when {
            params {
                patch_width_pixel = 250
                patch_overlap_pixel = 20
            }
            process {
                """
                input[0] = SOPA_CONVERT.out.spatial_data
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("sopa_patchifyimage - zarr - stub") {

        options "-stub"

        when {
            process {
                """
                zarrDir = file("test.zarr", type: 'dir')
                zarrDir.mkdir()

                input[0] = [
                    [ id:'test' ], // meta map
                    zarrDir // zarr
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
