nextflow_process {

    name "Test Process SEGMENTATIONREPORT"
    script "../main.nf"
    process "SEGMENTATIONREPORT"

    tag "modules"
    tag "modules_nfcore"
    tag "segmentationreport"

    test("segmentationreport - basic functionality") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file('${projectDir}/tests/data/mesmer/test_data_segmentation.geojson'),
                    true,
                    false,
                    'Nuclear',
                    'Membrane',
                    ''
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("segmentationreport - add background image") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file('${projectDir}/tests/data/mesmer/test_data_segmentation.geojson'),
                    true,
                    false,
                    'Nuclear',
                    'Membrane',
                    file('${projectDir}/tests/data/mesmer/test_data.tiff'),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("segmentationreport - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'stub_test' ], // meta map
                    file('${projectDir}/tests/data/mesmer/test_segmentation.geojson'),
                    true,
                    false,
                    'Nuclear',
                    'Membrane',
                    ''
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
