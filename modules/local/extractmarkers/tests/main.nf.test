nextflow_process {

    name "Test Process EXTRACTMARKERS"
    script "../main.nf"
    process "EXTRACTMARKERS"

    tag "modules"
    tag "modules_local"
    tag "extractmarkers"

    test("extractmarkers - tiff") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file('${projectDir}/tests/data/comet/synthetic_multichannel.tif')
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("extractmarkers - tiff - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file('${projectDir}/tests/data/comet/synthetic_multichannel.tif')
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
