nextflow_process {

    name "Test Process PARQUETTOTIFF"
    script "../main.nf"
    process "PARQUETTOTIFF"

    tag "modules"
    tag "modules_"
    tag "parquettotiff"

    // TODO: Just a stub for the moment, would need to add a parquet test file

    test("parquettotiff - parquet - stub") {

        options "-stub"

        when {
            process {
                """
                zarrDir = file("test.zarr", type: 'dir')
                zarrDir.mkdir()

                parquet = file("test.zarr/0.parquet")
                parquet.text = ""

                input[0] = [
                    [ id:'test' ], // meta map
                    parquet,
                    file('${projectDir}/tests/data/mesmer/test_data.tiff'), // tiff
                    "nuclear"
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
