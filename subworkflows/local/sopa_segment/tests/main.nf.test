nextflow_workflow {

    name "Test Subworkflow SOPA_SEGMENT"
    script "../main.nf"
    workflow "SOPA_SEGMENT"

    tag "subworkflows"
    tag "subworkflows_"
    tag "subworkflows/sopa_segment"
    tag "subworkflows/sopa_cellpose"
    tag "sopa_convert"
    tag "sopa_patchifyimage"
    tag "sopa_cellpose"
    tag "sopa_resolvecellpose"
    tag "cellmeasurement"

    test("sopa_segment - tiff") {

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [ id: 'test' ],
                    file('${projectDir}/tests/data/comet/synthetic_bgsub.ome.tif'), // tiff
                    ["DAPI"], // nuclear channel
                    ["CD45"]  // membrane channels
                ])
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }
}
