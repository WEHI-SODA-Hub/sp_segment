nextflow_workflow {

    name "Test Subworkflow MESMER_SEGMENT"
    script "../main.nf"
    workflow "MESMER_SEGMENT"

    tag "subworkflows"
    tag "subworkflows_"
    tag "subworkflows/mesmer_segment"
    tag "mesmersegment"
    tag "cellmeasurement"


    test("mesmer_segment - tiff") {

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [ id: 'test' ],
                    false,  // run_backsub
                    true,  // run_mesmer
                    false, // run_cellpose
                    file("${projectDir}/tests/data/mesmer/test_data.tiff", checkIfExists: true), // tiff
                    ["nuclear"],     // nuclear_channel
                    ["membrane"] // membrane_channels
                ])
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }
}
