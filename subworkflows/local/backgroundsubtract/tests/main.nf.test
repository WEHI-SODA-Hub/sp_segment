nextflow_workflow {

    name "Test Subworkflow BACKGROUNDSUBTRACT"
    script "../main.nf"
    workflow "BACKGROUNDSUBTRACT"

    tag "subworkflows"
    tag "subworkflows_"
    tag "subworkflows/backgroundsubtract"


    test("backgroundsubtract - tiff") {

        when {
            params {
                remove_markers = 'TRITC'
            }
            workflow {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file('${projectDir}/tests/data/comet/synthetic_multichannel.tif', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }
}
