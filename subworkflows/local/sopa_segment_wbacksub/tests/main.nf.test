nextflow_workflow {

    name "Test Subworkflow SOPA_SEGMENT_WBACKSUB"
    script "../main.nf"
    workflow "SOPA_SEGMENT_WBACKSUB"

    tag "subworkflows"
    tag "subworkflows_"
    tag "subworkflows/backgroundsubtract"
    tag "subworkflows/sopa_segment"
    tag "subworkflows/sopa_cellpose"
    tag "backsub"
    tag "extractmarkers"
    tag "sopa_convert"
    tag "sopa_patchifyimage"
    tag "sopa_cellpose"
    tag "sopa_resolvecellpose"
    tag "cellmeasurement"

    test("sopa_segment_wbacksub - tiff") {

        when {
            params {
                remove_markers = 'TRITC'
            }
            workflow {
                """
                input[0] = Channel.of([
                    [ id: 'test' ],
                    file('${projectDir}/tests/data/comet/synthetic_multichannel.tif'), // tiff
                    ["DAPI"], // nuclear channel
                    ["CD45"]  // membrane channels
                ])
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }
}
