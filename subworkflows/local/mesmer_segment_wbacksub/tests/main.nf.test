nextflow_workflow {

    name "Test Subworkflow MESMER_SEGMENT_WBACKSUB"
    script "../main.nf"
    workflow "MESMER_SEGMENT_WBACKSUB"

    tag "subworkflows"
    tag "subworkflows_"
    tag "subworkflows/mesmer_segment"
    tag "subworkflows/backgroundsubtract"
    tag "subworkflows/mesmer_segment_wbacksub"
    tag "extractmarkers"
    tag "backsub"
    tag "mesmersegment"
    tag "cellmeasurement"

    test("mesmer_segment - tiff") {

        when {
            params {
                remove_markers = 'TRITC'
            }
            workflow {
                """
                input[0] = Channel.of([
                    [ id: 'test' ],
                    true,  // run_backsub
                    true,  // run_mesmer
                    false, // run_cellpose
                    file('${projectDir}/tests/data/comet/synthetic_multichannel.tif'), // tiff
                    ["DAPI"], // nuclear channel
                    ["CD45"]  // membrane channels
                ])
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }
}
